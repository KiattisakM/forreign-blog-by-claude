# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# For local development with PostgreSQL:
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
# Example: DATABASE_URL="postgresql://postgres:password@localhost:5432/foreign_stock_blog?schema=public"

# For Neon (serverless PostgreSQL):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require"

# For Supabase:
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/foreign_stock_blog?schema=public"

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# API Configuration
API_PREFIX=/api

# Scraper Configuration
SCRAPER_ENABLED=false
SCRAPER_SCHEDULE=0 * * * *
SCRAPER_RUN_ON_START=false
